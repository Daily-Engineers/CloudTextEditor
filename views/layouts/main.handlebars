<!doctype html>
<html>

<head>
  <meta charset="utf-8" />
  <title>Example App</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="./public/libs/linedTextArea/jquery-linedtextarea.css">
  <!--Bootstrap CSS depedancy-->
  <link rel="stylesheet" type="text/css" href="./public/libs/bootstrap/css/bootstrap.css">
  <!--template CSS-->
  <link rel="stylesheet" type="text/css" href="./public/css/template.css">
  <!--editor CSS-->

  <link rel="stylesheet" type="text/css" href="./public/css/editor.css">

  <!--Syntax hilighting-->
  <link rel="stylesheet" type="text/css" href="./public/libs/highlightjs/styles/default.css">
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/styles/default.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.12.0/highlight.min.js"></script>

</head>
<script>
  //true if document is already in the database
  {{#if docSaved}}
    var docSaved = true;
  {{else}}
    var docSaved = false;
  {{/if}}
</script>
<body>

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="\">CloudText</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" id="NewBtn" href="javascript:void(0);">New<span class="sr-only">(current)</span></a>
        </li>
          <li class="nav-item">
            <a class="nav-link" id="SaveBtn" href="javascript:void(0);">Save</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" id="StlyeBtn" href="javascript:void(0);">Style Toggle</a>
          </li>
        {{! Only display share if doc has been saved}}
        {{#if docSaved}}
          <li class="nav-item">
            <a class="nav-link" id="ShareBtn" href="javascript:void(0);">Share</a>
          </li>
            <li class="nav-item">
                <a class="nav-link" id="DelBtn" href="javascript:void(0);">Delete</a>
            <li class="nav-item">
                <a class="nav-link" id="DownloadBtn" href="javascript:void(0)">Download</a>
            </li>
        {{/if}}

        <li class="nav-item">
          <a class="nav-link text-success font-weight-bold invisible" id="SuccessIcon" href="javascript:void(0);">Saved!</a>
        </li>

      </ul>
    </div>
  </nav>
  {{{body}}}
</body>
<!--jQuery-->
<script src="/public/libs/jquery/jquery-3.3.1.min.js"></script>
<script src="/public/libs/linedTextArea/jquery-linedtextarea.js"></script>
<!--Bootstrap-->
<script src="/public/libs/bootstrap/js/bootstrap.min.js"></script>
<!--Controller-->

<script src="/public/js/controller.js"></script>
<!-- Highlight jS -->

<script>hljs.initHighlightingOnLoad();</script>

</html>
